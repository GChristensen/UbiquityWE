{
    "name": "Ubiquity WebExtension",
    "short_name": "UbiquityWE",
    "homepage_url": "https://github.com/GChristensen/ubichr#readme",
    "author": "rostok, gchristnsn",
    "version": "0.2.1.0",
    "description": "WebExtension port of Ubiquity",
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://maps.googleapis.com; style-src 'self' 'unsafe-inline'; object-src 'self'",
    "applications": {
       "gecko": {
         "id": "ubiquitywe@firefox",
         "strict_min_version": "57.0"
       }
     },
    "manifest_version": 2,
    "background": {
        "scripts": [
          "lib/jquery.min.js", 
          "lib/template.js",
          "lib/math_parser.js",
          "lib/uuid.js",
          "utils.js",
          "cmdutils.js",
          "parser/contextutils.js",
          "parser/nounutils.js",
          "parser/nountypes.js",
          "parser/suggestion_memory.js",
          "parser/parser.js",
          "commands/more/nyaa.js",
          "commands/more/javlib.js",
          "commands/more/soviet.js",
          "commands/more/dark-flow.js",
          "commands/builtin.js",
          "commands/mail.js",
          "commands/translate.js",
          "commands/search.js",
          "commands/lingvo.js",
          "commands/feedsub.js",
          "commands/resurrect.js",
          "background.js"],
        "persistent":true
    },
    "browser_action": {
        "default_title": "Ubiquity WebExtension",
        "default_popup": "popup.html",
        "default_icon": "res/icon-24.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "chromeos": "Ctrl+Space",
                "linux": "Ctrl+Space",
                "mac": "Command+Space",
                "windows": "Ctrl+Space"
            }
        }
    },
  	"content_scripts": [{
        "matches": ["<all_urls>"],
    	"js": ["selection.js"]
    }],
    "icons": { "128" : "res/icon-128.png" },
    "permissions": [
        "<all_urls>",
        "activeTab", 
        "tabs",
        "tabHide",
        "clipboardRead", 
        "clipboardWrite", 
        "notifications", 
        "storage",
        "contextMenus"
    ]
}